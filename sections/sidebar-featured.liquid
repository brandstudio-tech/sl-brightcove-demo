

<div class="bg-danger p-2 mb-2 text-center text-white">
    <strong>FEATURED</strong>
</div>

<div class="box-wrapper text-center">
    <a href="#" class="text-dark" id ="btnUp">
        <svg aria-hidden="true" focusable="false"
             data-prefix="fas" data-icon="sort-up"
             class="svg-inline--fa fa-sort-up fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
            <path fill="currentColor"
                  d="M279 224H41c-21.4 0-32.1-25.9-17-41L143 64c9.4-9.4 24.6-9.4 33.9 0l119 119c15.2 15.1 4.5 41-16.9 41z"></path>
        </svg>
    </a>

    <div class="featured-slider-wrapper">

        {% if  collections[section.settings.products_featured_collection].products_count > 0 %}
            {% for product in collections[section.settings.products_featured_collection].products %}
                <div class = "border border-dark mb-3" id="{{product.id}}">
                    <img src="{{ product | img_url }}">
                </div>
            {% endfor %}
        {% endif %}
    </div>

    <a href="#" class="text-dark" id ="btnDown">
        <svg aria-hidden="true" focusable="false"
             data-prefix="fas" data-icon="sort-down"
             class="svg-inline--fa fa-sort-down fa-w-10"
             role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
            <path fill="currentColor"
                  d="M41 288h238c21.4 0 32.1 25.9 17 41L177 448c-9.4 9.4-24.6 9.4-33.9 0L24 329c-15.1-15.1-4.4-41 17-41z"></path>
        </svg>
    </a>
</div>

<style>
    .featured-slider-wrapper{
        height: 34rem;
        overflow-y: hidden !important;
        scroll-behavior: smooth;
    }

    /* Hide scrollbar for Chrome, Safari and Opera */
    .featured-slider-wrapper::-webkit-scrollbar {
        display: none;
    }


</style>

<script>
    $("#btnDown").click(function(event) {
        event.preventDefault();
        $(".featured-slider-wrapper").animate({
            scrollTop: $(".featured-slider-wrapper").height()  //Get the document height
        }, 500);
    });

    $("#btnUp").click(function(event) {
        event.preventDefault();
        $(".featured-slider-wrapper").animate({
            scrollTop: 0  //Get the document height
        }, 500);
    });

</script>

{% schema %}
{
"name": "Sidebar Featured",
"settings": [
{
"type": "collection",
"id": "products_featured_collection",
"label": "Featured products in sidebar"
}
]
}
{% endschema %}
